<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="estilo_bt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewJog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewPlacar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="viewLinha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="background">@color/black</item>
    </style>

    <style name="linearJogador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="telaInicio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/Transparent</item>
        <item name="android:textAlignment">center</item>


    </style>

    <style name="bt_inicio">
        <item name="background">@color/teal_700</item>
        <item name="android:textColor">@color/redin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">130dp</item>

        <item name="android:textStyle">bold</item>
    </style>

</resources>